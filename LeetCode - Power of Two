class Solution {
public:
    bool isPowerOfTwo(int n) {
        /*if(n<=0) return false;
        
        if(n & (n-1)){
            return false;
        }
        else{
            return true;
        }*/
        if (n < 1)
        return false;
	
    while(n != 1)
    {
	    if (n%2 != 0) 
            return false;
	    n /= 2;
    }
	
    return true;
    }
};
